  "type": "module",
  "devDependencies": {
    "@playwright/test": "^1.58.1",
    "@types/node": "^25.2.1",
    "allure-commandline": "^2.36.0",
    "allure-playwright": "^3.4.5",
    "playwright-html-reporter": "^0.1.11"
  },
  "dependencies": {
    "ajv": "^8.18.0",
    "csv-parse": "^6.1.0",
    "jsonpath-plus": "^10.3.0"
  }
